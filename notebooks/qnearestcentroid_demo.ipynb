   "source": [
    "# Quantum Distance-based Classifier (QNearestCentroid)\n",
    "This short notebook shows how the quantum nearest centroid model works on a toy dataset."
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "%config InlineBackend.figure_formats = ['svg']\n",
    "import numpy as np\n",
    "import matplotlib.pyplot as plt\n",
    "from app.dataset import make_dataset\n",
    "from app.feature_map import build_angle_feature_map\n",
    "from app.distance_classifier import train_qdistance_classifier, predict, compute_quantum_kernel\n",
    "from app.classical_baseline import train_classical_centroid, predict as c_predict\n",
    "from app.plots import plot_decision_regions\n",
    "\n",
    "# Generate data\n",
    "splits = make_dataset(n_samples=120, noise=0.1, type='moons')\n",
    "X_train, X_test, y_train, y_test = splits.X_train, splits.X_test, splits.y_train, splits.y_test\n",
    "\n",
    "# Build feature map and train models\n",
    "feature_map = build_angle_feature_map(entangle=True)\n",
    "q_model = train_qdistance_classifier(X_train, y_train, feature_map)\n",
    "c_model = train_classical_centroid(X_train, y_train)\n",
    "\n",
    "# Evaluate\n",
    "q_acc = (predict(X_test, q_model) == y_test).mean()\n",
    "c_acc = (c_predict(X_test, c_model) == y_test).mean()\n",
    "print(f'Quantum accuracy: {q_acc:.3f}')\n",
    "print(f'Classical accuracy: {c_acc:.3f}')\n",
    "\n",
    "# Quantum kernel heatmap\n",
    "kernel = compute_quantum_kernel(X_train[:30], q_model)\n",
    "plt.figure(figsize=(4,3))\n",
    "plt.imshow(kernel, cmap='mako')\n",
    "plt.colorbar(label='Fidelity')\n",
    "plt.title('Quantum kernel heatmap')\n",
    "plt.show()\n",
    "\n",
    "# Decision regions (using helper)")
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "plot_decision_regions(X_train, y_train, lambda pts: predict(pts, q_model), 'examples/notebook_decision_regions.svg')\n",
    "from IPython.display import SVG, display\n",
    "display(SVG(filename='examples/notebook_decision_regions.svg'))"
   ]
  }
